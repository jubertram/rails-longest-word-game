<h1 class="m-3">New game</h1>
<div class="d-flex mb-3">
<% @letters.each do |letter| %>
  <div class="letter"><%= letter %></div>
<% end %>
</div>

<form action="/score" method="post" data-turbo="false">
<label for="answer" class="m-2 ">What is the longest word you can find ?</label><br>
<input type="text" name="answer">
<input type="submit" value="Play" class="button">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :letters , @letters %>
</form>
